template

  // SAMPLE
  mdc-grid
    mdc-grid-cell(span="12")
      span.mdc-typography--display1 Icon Toggle Buttons

    // CONFIG AREA
    mdc-grid-cell(span="4")
      mdc-checkbox(checked.bind="accent") accent
      br
      mdc-checkbox(checked.bind="primary") primary
      br
      mdc-checkbox(checked.bind="on") on: ${on}
          
    // DEMO AREA
    mdc-grid-cell(span="8")
      section.components
        span.mdc-typography--title Default theme
        mdc-icon-toggle(
          on.bind="on"
          accent.bind="accent" 
          primary.bind="primary"
          icon-on="star"
          icon-off="star_outline"
          aria-label-on="On"
          aria-label-off="Off"
          on-toggle.delegate="onToggle($event)")
      
      section.mdc-theme--dark.components
        span.mdc-typography--title Dark theme
        mdc-icon-toggle(
          on.bind="on"
          accent.bind="accent" 
          primary.bind="primary"
          icon-on="star"
          icon-off="star_outline"
          aria-label-on="On"
          aria-label-off="Off"
          on-toggle.delegate="onToggle($event)")
      
      p Toggle event value: ${iconValue}        

    // LINKS
    mdc-grid-cell(span="12")
      hr
      a(href="https://material.io/components/web/catalog/buttons/icon-toggle-buttons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icon-toggle") Material components documentation
      br
      a(href="https://material.io/guidelines/components/buttons.html#buttons-toggle-buttons" target="_blank" data-analytics-category="external" data-analytics-action="mdg-icon-toggle") Material design guidelines
      br
      a(href="https://material.io/icons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icons") Icons
      hr


    // EXAMPLE
    mdc-grid-cell(span="12")
      pre
        code-prism(language="typescript").
          import { IMdcIconToggleEvent } from 'aurelia-mdc-bridge';
    
          onToggle(event: IMdcIconToggleEvent) {
            this.isOn = event.detail;
          }

      pre
        code-prism.
          &lt;mdc-icon-toggle
            on.bind="on"
            accent.bind="accent" 
            primary.bind="primary"
            icon-on="star"
            icon-off="star_outline"
            aria-label-on="On"
            aria-label-off="Off"
            on-toggle.delegate="onToggle($event)"&gt;
          &lt;/mdc-icon-toggle&gt;
