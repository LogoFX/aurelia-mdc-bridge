template

  // SAMPLE
  mdc-grid
    mdc-grid-cell(span="12")
      h4 Checkboxes

    // CONFIG AREA
    mdc-grid-cell(span="4")
      section
        mdc-checkbox(checked.bind="disable") Disable demo checkbox

      section
        mdc-checkbox(checked.bind="indeterminate") Make demo checkbox indeterminate

      section
        p Event counter: ${eventCounter}
        p Last change: ${isChecked}

    // DEMO AREA
    mdc-grid-cell(span="8")    
      section.components
        h6 Example
        br
        mdc-checkbox(
          checked.bind="checked1" 
          indeterminate.bind="indeterminate" 
          disabled.bind="disable" 
          on-change.delegate="onChange($event)") DEMO checkbox. checked: ${checked1}

        br
        mdc-checkbox(checked="true") Check unbound (checked="true")
        br
        mdc-checkbox(indeterminate="true") Check unbound (indeterminate="true")
        br
        mdc-checkbox(disabled="true") Check unbound (disabled="true")

    // LINKS
    mdc-grid-cell(span="12")
      hr
      a(href="https://material.io/components/web/catalog/input-controls/checkboxes/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-checkbox") Material components documentation
      br
      a(href="https://material.io/guidelines/components/selection-controls.html#selection-controls-checkbox" target="_blank" data-analytics-category="external" data-analytics-action="mdg-checkbox") Material design guidelines
      hr

    // EXAMPLE
    mdc-grid-cell(span="12")
      pre
        code-prism(language="typescript").
          import { IMdcCheckboxEvent } from 'aurelia-mdc-bridge';

          private onChange(event: IMdcCheckboxEvent) {
            this.isChecked = event.detail;
            this.eventCounter++;
          }
          
      pre
        code-prism.
          &lt;mdc-checkbox
            checked.bind="checked1" 
            indeterminate.bind="indeterminate"
            disabled.bind="disable"
            on-change.delegate="onChange($event)"&gt;

            DEMO checkbox. checked: ${checked1}
            
          &lt;/mdc-checkbox&gt;         
