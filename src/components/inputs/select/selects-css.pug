template

  // SAMPLE
  mdc-grid
    mdc-grid-cell(span="12")
      span.mdc-typography--display1 Select Menus (CSS only)
      p.
        For more active select component see #[a(href="#/components/inputs/selects") mdc-select]
    
    // CONFIG AREA
    mdc-grid-cell(span="4") 
      button(mdc-button="raised: true;" click.delegate="addRow()") Add option
      br
      mdc-checkbox(checked.bind="disabled") disabled
      br
      mdc-list(dense="true")
        mdc-list-item
          a(href="#multiselect") Multiselect
        mdc-list-item
          a(href="#divider") Divider
        mdc-list-item
          a(href="#optgroup") Optgroup
        mdc-list-item
          a(href="#size") Multiselect size

    // DEMO AREA
    mdc-grid-cell(span="8")

      // DEFAULT THEME
      section.components
        span.mdc-typography--title Default theme
        br

        select(mdc-select-css value.bind="selectedProductId" disabled.bind="disabled")
          option(repeat.for="product of products"
            model.bind="product.id") ${product.id} - ${product.name}
          option(role="presentation" disabled)
          option Item test
        
        br
        span Selected id: ${selectedProductId}
          
        br
        select(mdc-select-css multiple value.bind="selectedProducts" disabled.bind="disabled")
          option(repeat.for="product of products"
            model.bind="product.id") ${product.id} - ${product.name}
          option(role="presentation" disabled)
          option Item 2
          optgroup(label="optgroup label")
            option Group
          option Item 3

        br
        span Selected selected ids: ${selectedProducts}
            
        
      // DARK THEME
      section.mdc-theme--dark.components
        span.mdc-typography--title Dark theme
        br
        select(mdc-select-css value.bind="selectedProductId" disabled.bind="disabled")
          option(repeat.for="product of products"
            model.bind="product.id") ${product.id} - ${product.name}
        
        br
        select(mdc-select-css multiple value.bind="selectedProducts" disabled.bind="disabled")
          option(repeat.for="product of products"
            model.bind="product.id") ${product.id} - ${product.name}
          option(role="presentation" disabled)
          option Item 2
          optgroup(label="optgroup label")
            option Group
          option Item 3
        br


    // LINKS
    mdc-grid-cell(span="12")
      hr
      a(href="https://material.io/components/web/catalog/input-controls/select-menus/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-select-menus") Material components documentation
      br
      a(href="https://material.io/guidelines/components/text-fields.html" target="_blank" data-analytics-category="external" data-analytics-action="mdg-textfield") Material design guidelines text fields
      br
      a(href="https://material.io/guidelines/components/menus.html" target="_blank" data-analytics-category="external" data-analytics-action="mdg-menus") Material design guidelines menus
      br
      a(href="https://material.io/icons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icons") Icons
      hr 

    // EXAMPLE
    mdc-grid-cell(span="12")
      pre
        code-prism(language="typescript").
          private products = [
            { id: 0, name: 'Motherboard' },
            { id: 1, name: 'CPU' },
            { id: 2, name: 'Memory' },
          ];
          private selectedProductId = null;
          private selectedProducts = [];
            
      pre
        code-prism(language="html").
          &lt;select mdc-select-css value.bind="selectedProductId"&gt;
            &lt;option
              repeat.for="product of products"
              model.bind="product.id"&gt;${product.id} - ${product.name}
            &lt;/option&gt;
          &lt;/select&gt;

    // DARK THEME
    mdc-grid-cell(span="12")
      section(id="darktheme")
        span.mdc-typography--title style dark theme
        pre
          code-prism(language="css").
            .mdc-theme--dark select {
              background-color: #333;
            }

            .mdc-theme--dark select option {
              background-color: #333;
            }

    // MULTI SELECT
    mdc-grid-cell(span="12")
      section(id="multiselect")
        span.mdc-typography--title multi select
        pre
          code-prism(language="html").
            &lt;select mdc-select-css multiple value.bind="selectedProducts"&gt;
              &lt;option
                repeat.for="product of products"
                model.bind="product.id"&gt;${product.id} - ${product.name}&lt;/option&gt;
            &lt;/select&gt;

    // DIVIDERS
    mdc-grid-cell(span="12")
      section(id="divider")
        span.mdc-typography--title divider
        pre
          code-prism(language="html").
            &lt;select mdc-select-css multiple&gt;
              &lt;option&gt;Item 1&lt;/option&gt;
              &lt;option&gt;Item 2&lt;/option&gt;
              &lt;option role="presentation" disabled /&gt;
              &lt;option&gt;Item 3&lt;/option&gt;
            &lt;/select&gt;        

    // OPTGROUP
    mdc-grid-cell(span="12")
      section(id="optgroup")
        span.mdc-typography--title optgroup
        pre
          code-prism(language="html").
            &lt;select mdc-select-css multiple&gt;
              &lt;option&gt;Item 1&lt;/option&gt;
              &lt;option&gt;Item 2&lt;/option&gt;
              &lt;optgroup label="optgroup label"&gt;
                &lt;option&gt;Item 3&lt;/option&gt;
              &lt;/optgroup&gt;
            &lt;/select&gt;


    // SIZE
    mdc-grid-cell(span="12")
      section(id="size")
        span.mdc-typography--title multiselect size
        p Select elements take a size attribute to determine the height of the select box.
        pre
          code-prism(language="html").
            &lt;select mdc-select-css multiple size="6"&gt;
              ...
            &lt;/select&gt;

        p If you’d like to maintain the width or height outside of the attribute, you’ll need to set it in your styles:
        pre
          code-prism(language="css").
            .my-select-container .mdc-select {
              width: 300px;
              height: 550px;
            }       
