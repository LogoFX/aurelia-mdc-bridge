template

  // ELEMENTS -MENU LIST
  require(from="./app-menu.html")

  // TOOLBAR LINKS
  require(from="../toolbar-links")

  // TOOLBAR TITLE
  require(from="../toolbar-title")  

  // TOOLBAR
  mdc-toolbar.mdc-theme--dark(fixed="true" waterfall="true")
    mdc-toolbar-row

      // HEADER
      mdc-toolbar-section(start="true")
        toolbar-title

      // MAIN NAV
      mdc-toolbar-section(end="true" fit="true")
        toolbar-links(doc="true" comp="false")

  // adjust for fixed toolbar
  .mdc-toolbar-fixed-adjust

    // make drawer and main area stay side by side
    .container-permanent

      // NAV BAR
      mdc-drawer-permanent.mdc-show-drawer(spacer="false")
        app-menu

      // MAIN AREA
      main
        router-view
